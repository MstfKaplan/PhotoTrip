<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#393636"
    tools:context=".UpdateUsernameActivity">

    <EditText
        android:id="@+id/updateUserNameText"
        android:layout_width="269dp"
        android:layout_height="43dp"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Kullanıcı Adı"
        android:inputType="textPersonName"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textColorHint="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="269dp"
        android:layout_height="43dp"
        android:layout_marginTop="45dp"
        android:onClick="save"
        android:text="KAYDET"
        app:layout_constraintEnd_toEndOf="@+id/updateUserNameText"
        app:layout_constraintStart_toStartOf="@+id/updateUserNameText"
        app:layout_constraintTop_toBottomOf="@+id/updateUserNameText" />
</androidx.constraintlayout.widget.ConstraintLayout>